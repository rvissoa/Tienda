@model Tienda.Web.Models.CarritoCompraViewModels.CarritoCompraViewModel

@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity.EntityFrameworkCore
@inject SignInManager<IdentityUser> SignInManager

@if (Model.CarritoCompra.ItemsCarritoCompra.Count > 0 && SignInManager.IsSignedIn(User))
{
    <li>
        <a asp-controller="CarritoCompra">
            <span class="glyphicon glyphicon-shopping-cart"></span>
            <span id="cart-status">
                @(Model.CarritoCompra.ItemsCarritoCompra.Count
            </span>
        </a>
    </li>
}

